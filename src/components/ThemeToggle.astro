<div class="relative" id="theme-toggle-wrapper">
	<button
		id="theme-toggle-btn"
		type="button"
		class="rounded-lg p-2.5 text-sm text-text-muted hover:bg-bg focus:outline-none focus:ring-4 focus:ring-border dark:text-text-muted dark:hover:bg-bg dark:focus:ring-border cursor-pointer"
		aria-label="Toggle theme"
	>
		<!-- Sun Icon (Light) -->
		<svg
			id="theme-icon-light"
			class="hidden h-5 w-5"
			fill="currentColor"
			viewBox="0 0 20 20"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path
				d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 100 2h1z"
				fill-rule="evenodd"
				clip-rule="evenodd"></path>
		</svg>
		<!-- Moon Icon (Dark) -->
		<svg
			id="theme-icon-dark"
			class="hidden h-5 w-5"
			fill="currentColor"
			viewBox="0 0 20 20"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
		</svg>
		<!-- System Icon -->
		<svg
			id="theme-icon-system"
			class="hidden h-5 w-5"
			fill="none"
			stroke="currentColor"
			stroke-width="2"
			viewBox="0 0 24 24"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
			></path>
		</svg>
	</button>

	<!-- Dropdown menu -->
	<div
		id="theme-dropdown"
		class="absolute right-0 top-full z-50 mt-2 hidden w-36 divide-y divide-border rounded-lg bg-surface shadow-lg ring-1 ring-border ring-opacity-5 dark:bg-surface"
	>
		<ul class="py-1 text-sm text-text dark:text-text" aria-labelledby="theme-toggle-btn">
			<li>
				<button
					type="button"
					class="flex w-full cursor-pointer items-center px-4 py-2 hover:bg-bg dark:hover:bg-bg dark:hover:text-text"
					data-theme-value="light"
				>
					<svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
						<path
							d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 100 2h1z"
							fill-rule="evenodd"
							clip-rule="evenodd"></path>
					</svg>
					Light
				</button>
			</li>
			<li>
				<button
					type="button"
					class="flex w-full cursor-pointer items-center px-4 py-2 hover:bg-bg dark:hover:bg-bg dark:hover:text-text"
					data-theme-value="dark"
				>
					<svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
						<path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
					</svg>
					Dark
				</button>
			</li>
			<li>
				<button
					type="button"
					class="flex w-full cursor-pointer items-center px-4 py-2 hover:bg-bg dark:hover:bg-bg dark:hover:text-text"
					data-theme-value="system"
				>
					<svg
						class="mr-2 h-4 w-4"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						viewBox="0 0 24 24"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
						></path>
					</svg>
					System
				</button>
			</li>
		</ul>
	</div>
</div>

<script>
	const themeTogglebtn = document.getElementById("theme-toggle-btn");
	const themeDropdown = document.getElementById("theme-dropdown");
	const themeButtons = document.querySelectorAll("[data-theme-value]");

	// Toggle Dropdown
	themeTogglebtn?.addEventListener("click", (e) => {
		e.stopPropagation();
		themeDropdown?.classList.toggle("hidden");
	});

	// Close dropdown on outside click
	document.addEventListener("click", (e) => {
		if (!themeTogglebtn?.contains(e.target as Node) && !themeDropdown?.contains(e.target as Node)) {
			themeDropdown?.classList.add("hidden");
		}
	});

	// Handle Theme Selection
	themeButtons.forEach((btn) => {
		btn.addEventListener("click", () => {
			const theme = btn.getAttribute("data-theme-value");
			if (theme) {
				setTheme(theme);
				themeDropdown?.classList.add("hidden");
			}
		});
	});

	function setTheme(theme: string) {
		localStorage.setItem("theme", theme);

		// Update Icons
		updateIcon(theme);

		// Apply Theme
		if (theme === "system") {
			if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		} else if (theme === "dark") {
			document.documentElement.classList.add("dark");
		} else {
			document.documentElement.classList.remove("dark");
		}
	}

	function updateIcon(theme: string) {
		const lightIcon = document.getElementById("theme-icon-light");
		const darkIcon = document.getElementById("theme-icon-dark");
		const systemIcon = document.getElementById("theme-icon-system");

		lightIcon?.classList.add("hidden");
		darkIcon?.classList.add("hidden");
		systemIcon?.classList.add("hidden");

		if (theme === "light") lightIcon?.classList.remove("hidden");
		else if (theme === "dark") darkIcon?.classList.remove("hidden");
		else systemIcon?.classList.remove("hidden");
	}

	// Initialize Icon on load (checking localStorage or default to system)
	// Logic here handles the UI state (icon), the blocking script in Layout handles the immediate class application
	const currentTheme = localStorage.getItem("theme") || "system";
	updateIcon(currentTheme);
</script>
