---
const currentYear = new Date().getFullYear();

const navigation = {
	product: [
		{ name: "Features", href: "/features" },
		{ name: "Documentation", href: "/doc" },
		{ name: "Download", href: "https://github.com/elpeix/apicalls/releases/latest", external: true },
	],
	resources: [
		{ name: "Getting Started", href: "/doc#first-run" },
		{ name: "Scripting Guide", href: "/doc#scripting" },
		{ name: "Keyboard Shortcuts", href: "/doc#shortcuts" },
	],
	project: [
		{ name: "GitHub", href: "https://github.com/elpeix/apicalls", external: true },
		{ name: "Issues", href: "https://github.com/elpeix/apicalls/issues", external: true },
		{ name: "Releases", href: "https://github.com/elpeix/apicalls/releases", external: true },
	],
};
---

<footer class="bg-surface border-t border-border transition-colors duration-200">
	<div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
		<div class="xl:grid xl:grid-cols-3 xl:gap-8">
			<!-- Brand -->
			<div class="space-y-4">
				<a href="/" class="flex items-center space-x-2">
					<img src="/logo.svg" alt="API Calls Logo" class="h-8 w-auto" />
					<span class="text-xl font-bold text-text">API Calls</span>
				</a>
				<p class="text-sm text-text-muted max-w-xs">
					A local-first, privacy-focused REST API client. Open source and built for developers who
					value simplicity.
				</p>
				<div class="flex space-x-4">
					<a
						href="https://github.com/elpeix/apicalls"
						target="_blank"
						rel="noreferrer"
						class="text-text-muted hover:text-primary transition-colors"
						aria-label="GitHub"
					>
						<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
							<path
								d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
							></path>
						</svg>
					</a>
				</div>
			</div>

			<!-- Navigation -->
			<div class="mt-12 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0 md:grid-cols-3">
				<div>
					<h3 class="text-sm font-semibold text-text uppercase tracking-wider">Product</h3>
					<ul class="mt-4 space-y-3">
						{
							navigation.product.map((item) => (
								<li>
									<a
										href={item.href}
										target={item.external ? "_blank" : undefined}
										rel={item.external ? "noreferrer" : undefined}
										class="text-sm text-text-muted hover:text-primary transition-colors inline-flex items-center gap-1"
									>
										{item.name}
										{item.external && (
											<svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
												/>
											</svg>
										)}
									</a>
								</li>
							))
						}
					</ul>
				</div>
				<div>
					<h3 class="text-sm font-semibold text-text uppercase tracking-wider">Resources</h3>
					<ul class="mt-4 space-y-3">
						{
							navigation.resources.map((item) => (
								<li>
									<a
										href={item.href}
										class="text-sm text-text-muted hover:text-primary transition-colors"
									>
										{item.name}
									</a>
								</li>
							))
						}
					</ul>
				</div>
				<div>
					<h3 class="text-sm font-semibold text-text uppercase tracking-wider">Project</h3>
					<ul class="mt-4 space-y-3">
						{
							navigation.project.map((item) => (
								<li>
									<a
										href={item.href}
										target={item.external ? "_blank" : undefined}
										rel={item.external ? "noreferrer" : undefined}
										class="text-sm text-text-muted hover:text-primary transition-colors inline-flex items-center gap-1"
									>
										{item.name}
										{item.external && (
											<svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
												/>
											</svg>
										)}
									</a>
								</li>
							))
						}
					</ul>
				</div>
			</div>
		</div>

		<!-- Bottom bar -->
		<div class="mt-12 pt-8 border-t border-border">
			<div class="flex flex-col md:flex-row justify-between items-center gap-4">
				<p class="text-sm text-text-muted">
					&copy; {currentYear} API Calls. Released under the
					<a
						href="https://www.gnu.org/licenses/gpl-3.0.html"
						target="_blank"
						rel="noreferrer"
						class="hover:text-primary transition-colors">GPL-3.0 License</a
					>.
				</p>
				<p class="text-sm text-text-muted">
					Made with
					<span class="text-red-500">&hearts;</span>
					for developers
				</p>
			</div>
		</div>
	</div>
</footer>
