---
import Layout from "../layouts/Layout.astro";
import Icon from "../components/Icon.astro";

const features = [
	{
		title: "Organized Workspaces",
		description:
			"Keep your projects separate. Workspaces allow you to manage distinct collections, environments, and cookies for every context.",
		icon: "folder",
		link: "/doc#workspaces",
	},
	{
		title: "Powerful Scripting",
		description:
			"Automate your workflow with JavaScript. Write pre-request scripts to generate tokens and post-request scripts to validate responses.",
		icon: "edit",
		link: "/doc#scripting",
	},
	{
		title: "Privacy Focused",
		description:
			"No cloud sync, no tracking. Your data is stored locally on your machine, ensuring your API credentials remain secure.",
		icon: "file",
		link: "/doc#data",
	},
	{
		title: "Environments & Variables",
		description:
			"Switch between Dev, Staging, and Prod seamlessly. Use variables in URLs, headers, and bodies to avoid repetition.",
		icon: "environment",
		link: "/doc#environments",
	},
	{
		title: "Keyboard First",
		description:
			"Designed for speed. Use shortcuts for everything from sending requests (Ctrl+Enter) to switching tabs and environments.",
		icon: "send",
		link: "/doc#shortcuts",
	},
	{
		title: "Import & Export",
		description:
			"Move your data easily. Support for importing from Postman, OpenAPI, and JSON/YAML ensures you're never locked in.",
		icon: "folder-open",
		link: "/doc#collections",
	},
];
---

<Layout
	title="Features"
	description="Discover the powerful features of API Calls: Workspaces, Scripting, Privacy, and more."
>
	<div class="bg-bg py-24">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<h1 class="text-4xl font-extrabold text-text sm:text-5xl">
					Powerful Features for
					<span class="text-primary">Modern Developers</span>
				</h1>
				<p class="mx-auto mt-4 max-w-2xl text-xl text-text-muted">
					Everything you need to build, test, and document your APIs efficiently.
				</p>
			</div>

			<div class="mt-20">
				<div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
					{
						features.map((feature, index) => (
							<div class="group relative flex flex-col rounded-2xl border border-border bg-surface p-8 transition-all duration-300 hover:border-primary/50 hover:-translate-y-1 hover:shadow-lg hover:shadow-primary/5">
								<!-- Gradient accent on hover -->
								<div class="absolute inset-x-0 top-0 h-1 rounded-t-2xl bg-gradient-to-r from-primary/0 via-primary to-primary/0 opacity-0 transition-opacity duration-300 group-hover:opacity-100" />

								<!-- Icon with animated background -->
								<div class="mb-6 relative">
									<div class="absolute inset-0 h-14 w-14 rounded-xl bg-primary/10 blur-xl transition-all duration-300 group-hover:bg-primary/20 group-hover:blur-2xl" />
									<div class="relative flex h-14 w-14 items-center justify-center rounded-xl bg-gradient-to-br from-primary/10 to-primary/5 text-primary ring-1 ring-primary/20 transition-all duration-300 group-hover:ring-primary/40">
										<Icon name={feature.icon} size={28} />
									</div>
								</div>

								<!-- Content -->
								<h3 class="text-xl font-bold text-text transition-colors duration-300 group-hover:text-primary">
									{feature.title}
								</h3>
								<p class="mt-3 flex-1 text-base leading-relaxed text-text-muted">
									{feature.description}
								</p>

								<!-- Learn more link -->
								<a href={feature.link} class="mt-6 flex items-center text-sm font-medium text-primary opacity-0 transition-all duration-300 group-hover:opacity-100">
									<span>Learn more</span>
									<svg class="ml-1 h-4 w-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</a>
							</div>
						))
					}
				</div>
			</div>

			<!-- Call to Action -->
			<div class="mt-24 text-center">
				<a
					href="/doc"
					class="inline-flex items-center justify-center rounded-lg border border-transparent bg-primary px-8 py-3 text-base font-medium text-white shadow-sm hover:opacity-90 transition-opacity"
				>
					Read the Documentation
				</a>
			</div>
		</div>
	</div>
</Layout>
